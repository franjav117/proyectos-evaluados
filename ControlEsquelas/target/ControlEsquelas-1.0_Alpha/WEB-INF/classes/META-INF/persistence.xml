<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="esquelasPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <!--Para hacer referencia a un recurso JNDI de tomcat-->
<!--    <non-jta-data-source>esquelas</non-jta-data-source>-->
    <class>com.esquelas.entities.Vehiculo</class>
    <class>com.esquelas.entities.TipoMatricula</class>
    <class>com.esquelas.entities.ClaseLicencia</class>
    <class>com.esquelas.entities.Otros</class>
    <class>com.esquelas.entities.Rol</class>
    <class>com.esquelas.entities.Conductor</class>
    <class>com.esquelas.entities.Cajero</class>
    <class>com.esquelas.entities.TipoPlaca</class>
    <class>com.esquelas.entities.Estado</class>
    <class>com.esquelas.entities.TipoGravedad</class>
    <class>com.esquelas.entities.Decomiso</class>
    <class>com.esquelas.entities.Persona</class>
    <class>com.esquelas.entities.Departamento</class>
    <class>com.esquelas.entities.Esquela</class>
    <class>com.esquelas.entities.Clasificacion</class>
    <class>com.esquelas.entities.Usuario</class>
    <class>com.esquelas.entities.AgenteTransito</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/control_esquelas?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
